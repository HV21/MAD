<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewScheduleActivity">



    <ScrollView

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/regular"
                        android:id="@+id/tlabel"
                        android:textSize="22sp"
                        android:text="Title"
                        android:textColor="@color/bluedark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                    <EditText
                        android:id="@+id/tEt"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tlabel"
                        android:backgroundTint="@color/transparent"
                        android:hint="Write something..."
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </EditText>
                </RelativeLayout>




            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/regular"
                        android:id="@+id/dlabel"
                        android:textSize="22sp"
                        android:text="Description"
                        android:textColor="@color/bluedark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                    <EditText
                        android:id="@+id/dEt"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/dlabel"
                        android:backgroundTint="@color/transparent"
                        android:hint="Write something..."
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </EditText>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/regular"
                        android:id="@+id/datelabel"
                        android:textSize="22sp"
                        android:text="Date"
                        android:textColor="@color/bluedark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                    <EditText
                        android:editable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:id="@+id/dateEt"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/datelabel"
                        android:backgroundTint="@color/transparent"
                        android:hint="Click here to choose date."
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </EditText>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/saveScheduleBtn"
        app:tint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_height="wrap_content">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>